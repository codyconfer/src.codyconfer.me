root = true

[*]
max_line_length = 120
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{html,md}]
indent_style = space
indent_size = 4

[*.{css,scss,sass}]
indent_style = space
indent_size = 2

[{package.json,.yml}]
indent_style = space
indent_size = 2

